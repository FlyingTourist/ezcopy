{
  "name": "ezcopy",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Get customized copy and paste!",
  "browser_action": {
    "default_title": "ezcopy",
    "default_icon": "icon-001.png",
    "default_popup": "popup_ezcopy.html"
  },
  "content_scripts" : [
    {
        "matches" : [
          "http://*/*"
        ],
        "js" : ["contentscript.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      }
    }
  },
  "permissions": [ "tabs", "activeTab", "storage", "unlimitedStorage", "background", "http://*/*", "https://*/*" ],
  "icons": {
    "16": "icon16-000.png",
    "48": "icon48-000.png",
    "128": "icon128-000.png"
  }
}
